@model UserEditViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h1>Index</h1>

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Profilinizi Düzenleyiniz.</h4>            
            <form class="forms-sample" method="post" enctype="multipart/form-data"> @*enctype resim dosyamızı kendi klasöürümüze kaydettirdi*@
                <div class="form-group">
                    <label for="exampleInputName1">Adınız</label>
                    <input type="text" asp-for="Name" class="form-control" id="exampleInputName1" placeholder="Adınız">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Soyadınız</label>
                    <input type="text" asp-for="Surname" class="form-control" id="exampleInputName1" placeholder="Soyadınız">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Şifreniz</label>
                    <input type="password" asp-for="Password" class="form-control" id="exampleInputPassword4" placeholder="Şifreniz ">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Şifreniz Tekrar</label>
                    <input type="password" asp-for="PasswordConfirmed" class="form-control" id="exampleInputPassword4" placeholder="Şifreniz Tekrar">
                </div>               
                <div class="form-group">
                    <label>Resim Seç</label>
                    <input type="file" asp-for="Img" class="file-upload-default">
                    <div class="input-group col-xs-12">
                        <input type="text" class="form-control file-upload-info" disabled placeholder="Resim Yükle">
                        <span class="input-group-append">
                            <button class="file-upload-browse btn btn-primary" type="button">Yükle</button>
                        </span>
                    </div>
                </div>                              
                <button type="submit" class="btn btn-primary mr-2">Güncelle</button>
                <button class="btn btn-light">İptal</button>
            </form>
        </div>
    </div>
</div>