@model UserRegisterViewModel
@{
    Layout = null;
}



<!DOCTYPE html>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Skydash Admin</title>
    <link rel="stylesheet" href="~/skydash/vendors/feather/feather.css">
    <link rel="stylesheet" href="~/skydash/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="~/skydash/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="~/skydash/css/vertical-layout-light/style.css">
    <link rel="shortcut icon" href="~/skydash/images/favicon.png" />
</head>
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <div class="brand-logo">
                                <img src="~/skydash/images/logo.svg" alt="logo">
                            </div>
                            <h4>Buralarda yeni misin ?</h4>
                            <h6 class="font-weight-light">Kolayca kayıt olabilirsin. Sadece birkaç dakikanı ayırman yeterli.</h6>
                            <form class="pt-3" asp-action="Index" asp-controller="Register">
                                <div class="form-group">
                                    <label>Adınız</label>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                    <input type="text" class="form-control form-control-lg" asp-for="Name">
                                </div>
                                <div class="form-group">
                                    <label>Soyadınız</label>
                                    <span asp-validation-for="Surname" class="text-danger"></span>
                                    <input type="text" class="form-control form-control-lg" asp-for="Surname">
                                </div>
                                <div class="form-group">
                                    <label>Kullanıcı Adınız</label>
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                    <input type="text" class="form-control form-control-lg" asp-for="UserName">
                                </div>
                                <div class="form-group">
                                    <label>Kullanıcı Fotoğrafınız</label>
                                    <span asp-validation-for="ImgUrl" class="text-danger"></span>
                                    <input type="text" class="form-control form-control-lg" asp-for="ImgUrl">
                                </div>
                                <div class="form-group">
                                    <label>Şifreniz</label>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                    <input type="password" class="form-control form-control-lg" asp-for="Password">
                                </div>
                                <div class="form-group">
                                    <label>Şifreniz Tekrar</label>
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    <input type="password" class="form-control form-control-lg" asp-for="ConfirmPassword">
                                </div>
                                <div class="form-group">
                                    <label>Email Adresiniz</label>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                    <input type="email" class="form-control form-control-lg" asp-for="Email">
                                </div>
                                <div asp-validation-summary="ModelOnly">

                                </div>
                                <div class="mt-3">
                                    @* <a class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" asp-action="Index">Kayıt Ol</a> *@
                                    <button class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn"> Kayıt Ol </button>
                                </div>                                
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>

</html>

