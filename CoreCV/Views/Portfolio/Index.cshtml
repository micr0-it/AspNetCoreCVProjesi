@model List<Portfolio>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Projeler Tablosu</h4>
                <p class="card-description">
                    Projeleri gösteren tablo
                </p>
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th> Proje Adı </th>
                                <th> Güncelle </th>
                                <th> Sil </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td> @item.PortfolioID </td>
                                    <td> @item.Name </td>
                                    <td style="width:10%"><a href="/Portfolio/UpdatePortfolio/@item.PortfolioID" type="button" class="btn btn-warning btn-fw">Düzenle</a></td>
                                    <td style="width:10%"><a href="/Portfolio/DeletePortfolio/@item.PortfolioID" type="button" class="btn btn-danger btn-fw">Sil</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <br />
                    <a href="/Portfolio/AddPortfolio/" type="button" class="btn btn-primary btn-fw">Proje Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>
