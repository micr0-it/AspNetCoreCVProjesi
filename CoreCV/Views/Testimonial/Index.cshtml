@model List<Testimonial>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Order Status</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th> Görsel </th>
                                <th> Ad Soyad </th>
                                <th> Çalıştığı Firma / Unvan</th>
                                <th> Açıklama </th>
                                <th> Detay </th>
                                <th> Sil </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td> @item.TestimonialID </td>
                                    <td>
                                        <img src="@item.ImgUrl" alt="image" />
                                    </td>
                                    <td> @item.Name </td>                   
                                    <td> @item.Company </td>
                                    <td> @item.Comment </td>
                                    <td>
                                        <a href="/Testimonial/DeleteTestimonial/@item.TestimonialID" class="badge badge-outline-success">Detay</a>
                                    </td> 
                                    <td>
                                        <a href="/Testimonial/UpdateTestimonial/@item.TestimonialID" class="badge badge-outline-success">Sil</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <br />
                    <a href="/Testimonial/AddTestimonial/" type="button" class="btn btn-primary btn-fw">Referans Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>

