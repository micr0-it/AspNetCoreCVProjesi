@model SocialMedia
@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>UpdateSocialMedia</h1>

<div class="row">
    <div class="col-6 grid-margin">
        <form asp-action="UpdateSocialMedia" asp-controller="SocialMedia" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SocialMediaID" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                @* <span asp-validation-for="Name" class="text-danger"></span> *@
            </div>
            <div class="form-group">
                <label asp-for="Icon" class="control-label"></label>
                <input asp-for="Icon" class="form-control" />
                @* <span asp-validation-for="Icon" class="text-danger"></span> *@
            </div>
            <div class="form-group">
                <label asp-for="Url" class="control-label"></label>
                <input asp-for="Url" class="form-control" />
                @* <span asp-validation-for="Url" class="text-danger"></span> *@
            </div>
            <div class="form-group">
                <button type="submit" value="Save" class="btn btn-primary">Güncelle ve Kaydet</button>
            </div>
        </form>
    </div>
</div>