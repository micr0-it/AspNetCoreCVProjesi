@model List<Message>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Deneyim Tablosu</h4>
                <p class="card-description">
                    Deneyimleri gösteren tablo
                </p>
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th> Gönderen </th>
                                <th> Mail </th>
                                <th> Tarih </th>
                                <th> Mesajı Gör </th>
                                <th> Sil </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td> @item.MssgID </td>
                                    <td> @item.Name </td>
                                    <td> @item.Mail </td>
                                    <td> @item.Date</td>
                                    <td> @item.Content </td>
                                    <td style="width:10%"><a href="/MessageContact/MessageDetails/@item.MssgID" type="button" class="btn btn-warning btn-fw">Mesajı Gör</a></td>
                                    <td style="width:10%"><a href="/MessageContact/DeleteMessage/@item.MssgID" type="button" class="btn btn-danger btn-fw">Sil</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <br />
                </div>
            </div>
        </div>
    </div>
</div>
