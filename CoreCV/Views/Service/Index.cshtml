@model List<Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Hizmetler</h1>

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Hizmetler Tablosu</h4>
                <p class="card-description">
                    Hizmetleri gösteren tablo
                </p>
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th> Hizmet Adı </th>
                                <th> Hizmet Resmi </th>
                                <th> Düzenle </th>
                                <th> Sil </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td> @item.ServiceID </td>
                                    <td> @item.Title </td>
                                    <td> @item.ImgUrl </td>
                                    <td style="width:10%"><a href="/Service/UpdateService/@item.ServiceID" type="button" class="btn btn-warning btn-fw">Düzenle</a></td>
                                    <td style="width:10%"><a href="/Service/DeleteService/@item.ServiceID" type="button" class="btn btn-danger btn-fw">Sil</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <br />
                    <a href="/Service/ServicePortfolio/" type="button" class="btn btn-primary btn-fw">Hizmet Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>