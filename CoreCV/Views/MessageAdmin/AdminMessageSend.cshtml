@model WriterMessage
@{
    ViewData["Title"] = "AdminMessageSend";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>AdminMessageSend</h1>
<form class="forms-sample" asp-action="AdminMessageSend" asp-controller="MessageAdmin" method="post">
    <div class="form-group">
        <label>Konu</label>
        <input type="text" class="form-control" asp-for="Subject">
    </div>
    <div class="form-group">
        <label>Alıcı</label>
        <input type="text" class="form-control" asp-for="Receiver">
    </div>
    <div class="form-group">
        <label>Mesaj</label>
        <input type="text" class="form-control" asp-for="MessageContent">
    </div>
    <button type="submit" class="btn btn-primary mr-2">Gönder</button>
</form>
