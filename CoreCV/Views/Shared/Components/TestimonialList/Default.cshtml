@model List<Testimonial>
<div class="container-narrow">
    <div class="text-center mb-5">
        <h2 class="marker marker-center">Referanslarım</h2>
    </div>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6 mb-5" data-aos="fade-right" data-aos-delay="100">
                <div class="d-flex ms-md-3"><span><i class="fas fa-2x fa-quote-left"></i></span><span class="m-2">@item.Comment</span></div>
                <div class="d-flex justify-content-end align-items-end">
                    <div class="text-end me-2">
                        <div class="fw-bolder">@item.Name</div>
                        <div class="text-small">@item.Company</div>
                    </div><img class="me-md-3 rounded" src="@item.ImgUrl" width="96" height="96" alt="client 1" />
                </div>
            </div>
        }  
    </div>
</div>